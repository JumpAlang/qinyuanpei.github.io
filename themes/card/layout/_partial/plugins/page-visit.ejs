<% if (theme.visit_counter) { %>
<span id="busuanzi_container_page_pv" title="文章总阅读量" style='display:none'>
    <i class="icon icon-eye icon-pr"></i><span id="busuanzi_value_page_pv"></span>
</span>
<% } else if (theme.valine_counter) { %>
<span id="<%- post.abbrlink %>" class="leancloud-visitors" data-flag-title="<%- post.title %>">
    <i class="icon icon-eye icon-pr"></i><span class="leancloud-visitors-count">1000000</span>
</span>
<% } %>
