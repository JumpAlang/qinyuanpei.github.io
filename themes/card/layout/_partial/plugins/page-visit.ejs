<% if (theme.busuanzi_counter.enable) { %>
<span id="busuanzi_container_page_pv" title="文章总阅读量" style='display:none'>
    <i class="icon icon-eye icon-pr"></i><span id="busuanzi_value_page_pv"></span>
</span>
<% } else if (theme.leancloud_counter.enable) { %>
<span id="leancloud-counter-page-pv" data-post-title="<%- post.title %>" data-post-id="<%- post.abbrlink %>" data-post-url="<%- post.permalink %>">
    <i class="icon icon-eye icon-pr"></i><span class="leancloud-counter-value-page-pv"></span>
</span>
<% } %>
